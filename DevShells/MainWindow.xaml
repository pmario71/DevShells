<Window x:Name="MainWnd" x:Class="DevShells.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevShells"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="183.434">
    <Window.Resources>
        <DataTemplate x:Key="Buttons" DataType="local:ShellConfiguration">
            <Button Height="30" DockPanel.Dock="Top" Content="{Binding Path=Name}" 
                    Command="{Binding ElementName=MainWnd, Path=CreateShellCommand, Mode=OneWay}" CommandParameter="{Binding Path=Name}" />
        </DataTemplate>
    </Window.Resources>
    <ItemsControl ItemsSource="{Binding}" ItemTemplate="{StaticResource Buttons}">
    </ItemsControl>
</Window>

