<Window
    x:Class="DevShells.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DevShells"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MainWnd"
    Title="DevShells"
    Width="183.434"
    Height="350"
    mc:Ignorable="d">
    <Window.Resources>
        <DataTemplate x:Key="Buttons" DataType="local:ShellConfiguration">
            <Button
                Height="40"
                Command="{Binding ElementName=MainWnd, Path=CreateShellCommand, Mode=OneWay}"
                CommandParameter="{Binding Path=Name}"
                Content="{Binding Path=Name}"
                DockPanel.Dock="Top" />
        </DataTemplate>
    </Window.Resources>
    <ItemsControl ItemTemplate="{StaticResource Buttons}" ItemsSource="{Binding}" />
</Window>

